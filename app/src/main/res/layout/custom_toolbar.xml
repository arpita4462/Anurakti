<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:theme="@style/ThemeOverlay.AppCompat.Light" xmlns:android="http://schemas.android.com/apk/res/android">

        <android.support.v7.widget.Toolbar
                android:id="@+id/my_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:layout_gravity="top"
                android:fitsSystemWindows="true"
                android:padding="0dp"
                android:theme="@style/OverflowMenu"
                app:contentInsetStart="0dp"
                android:background="@color/white"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <LinearLayout
                    android:id="@+id/rltop"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:orientation="vertical">

                <TextView
                        android:textColor="@color/colorPrimary"
                        android:textSize="28sp"
                        android:id="@+id/appname_tv"
                        android:layout_gravity="center"
                        android:text="@string/a_n_u_r_a_k_t_i"
                        android:textAllCaps="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bodonbd"/>

<!--
                <TextView
                        android:id="@+id/jawan_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:text="@string/j_a_w_a_n_s"
                        android:textColor="@android:color/black"/>
-->

            </LinearLayout>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

