<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/blog_rv_cardview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:transitionName="@string/transiton_card"
                                    android:layout_marginBottom="4.0dp"
                                    android:layout_marginLeft="8.0dp"
                                    android:layout_marginRight="8.0dp"
                                    android:layout_marginTop="4.0dp"
                                    card_view:cardCornerRadius="2dp">

<LinearLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
            android:id="@+id/photo_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/blogger"
            android:padding="5dp"/>
    <LinearLayout
            android:id="@+id/layout_item2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
            android:id="@+id/blog_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:textColor="@color/text_color"
            android:text="1 min ago"/>

        <TextView
            android:id="@+id/blog_headline_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:transitionName="@string/transiton_text"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="@string/blogger_headline"/>

</LinearLayout>
</LinearLayout>


</android.support.v7.widget.CardView>